mixin side_tab_list(tabs)
  ul.nav.nav-pills.nav-stacked
    block

mixin tab(tabPanelId, isActive)
  li(role="presentation", class=(isActive ? 'active' : ''))&attributes(attributes)
    a(href="##{tabPanelId}", role="tab", data-toggle="tab")
      block

mixin tab_panel(id, isActive)
  .tab-pane(id=id, role="tabpanel", class= isActive ? 'active' : '')
    block
