include ../../mixins/images
include ../../mixins/tags

.four.columns
  - var imgUrl = (property.images && property.images.length ? property.images[0].url : null)
  +image_with_overlay(imgUrl, 324, 240)(class="js-upload")
    i.fa.fa-picture-o.fa-4x.property-image-overlay-content

.eight.columns
  .row
    .eight.columns
      h4.property-list-item--title= property.name

    .four.columns
      .pull-right
        a(href="/property/#{property.slug}", target="_blank") view public listing &nbsp;
          i.fa.fa-external-link

  .row
    .property-list-item--description= property.description

  .row
    .property-list-item--controls
      button.js-edit Edit
      button.js-upload Upload Pics
