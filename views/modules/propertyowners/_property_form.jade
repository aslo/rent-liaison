include ../../mixins/rent_request
include ../../mixins/property

form.js-property-form

  .row
    .six.columns
      .hide.alert.js-error-alert

  .row
    .six.columns
      label Property Name
      input.u-full-width(name="name", type="text")

  .row
    .six.columns
      label Description
      textarea.u-full-width(name="description")

  .row
    .six.columns
      label Location
      +destination_select()(name="location", class="u-full-width")

  .row
    .six.columns
      label Amenities
      input.u-full-width(type="text", name="amenities")

  +create_button()(type="submit")
