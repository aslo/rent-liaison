.row
  .twelve.columns
    h1.text-center Rent Request

.row
  .offset-by-three.columns.eight.columns
    form.js-rent-request-form(action="/rentalrequest", method="POST")
      fieldset
        legend Where to?
        .row
          .six.columns
            //- TODO get from DB
            select#destination.u-full-width(name="destination")
              option East Hampton
              option West Hampton
              option Montauk

      fieldset
        legend When?
        .row
          .three.columns
            label(for="js-start-date") Start Date
            input#js-start-date.js-pikaday.u-full-width(name="startDate", type="text")
          .three.columns
            label(for="js-end-date") End Date
            input#js-end-date.js-pikaday.u-full-width(name="endDate", type="text")
        .row
          label
            input#js-no-dates(value="true", type="checkbox")
            .label-body no specific dates
        .row
          label
            input#datesAreFlexible(name="datesAreFlexible", value="true", type="checkbox")
            .label-body my dates are flexible

      fieldset
        legend Who are you?
        .row
          .four.columns
            label(for="firstName") First Name
            input#firstName.u-full-width(name="user[firstName]", type="text")
          .four.columns
            label(for="lastName") Last Name
            input#lastName.u-full-width(name="user[lastName]", type="text")
        .row
          .eight.columns
            label(for="email") Email
            input#email.u-full-width(name="user[email]", type="email")

      input.button-primary(type="submit", value="Submit")
